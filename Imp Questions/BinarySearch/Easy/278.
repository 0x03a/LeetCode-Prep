// The API isBadVersion is defined for you.
// bool isBadVersion(int version);

class Solution {
public:
int bSearch(int & num){
    int l=0;
    int r=num;
    int res=0;
    while(l<= r){
        int mid=l+(r-l)/2;

        if(isBadVersion(mid) == false){
             l=mid+1;
        }
        else if(isBadVersion(mid) == true && isBadVersion(mid-1) == true)
        r=mid-1;
        else
        {
            res=mid;
            break;
        }
            
    }
    return res;
}
    int firstBadVersion(int n) {
      // first linear approach, a kind of Brute here , so time limit exceeded.
      int res=0;
    //   for(size_t i=1; i<= n; i++){
    //     if(isBadVersion(i))
    //         {
    //             res=i;
    //             break;
    //         }
    //   }

/// now, as we know the array is sorted , and we want to find the 1st number which is a badversion.
// use binary Search
       res=bSearch(n);
      return res;
    }
};
